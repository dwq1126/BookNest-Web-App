<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Create Account</title>
  <link rel="stylesheet" href="/css/auth.css">
</head>
<body>
  <div class="auth-wrapper">
    <div class="auth-card">
      <h2>Create Account</h2>
      {{#if error}}
        <div class="error-message" style="color: red; padding: 10px; margin-bottom: 15px; border: 1px solid red;">
          {{error}}
        </div>
      {{/if}}
      <form method="POST" action="/auth/register">
        <div class="form-field">
          <label>First Name</label>
          <input type="text" name="firstName" minlength="2" maxlength="25" required>
        </div>

        <div class="form-field">
          <label>Last Name</label>
          <input type="text" name="lastName" minlength="2" maxlength="25" required>
        </div>

        <div class="form-field">
          <label>Email</label>
          <input type="email" name="email" required>
        </div>

        <div class="form-field">
          <label>User ID</label>
          <input type="text" name="userId" required minlength="5" maxlength="10">
        </div>

        <div class="form-field">
          <label>Password</label>
          <input type="password" name="password" id="password" required>
        </div>

        <div class="form-field">
          <label>Confirm Password</label>
          <input type="password" name="confirmPassword" id="confirmPassword" required>
        </div>

        <div class="form-field">
          <label>
            <input type="checkbox" name="isAdmin" value="true">
            Register as Admin
          </label>
        </div>

        <button class="btn btn-primary" type="submit">Create Account</button>
      </form>

      <div class="switch-link">
        <span>Already have an account?</span>
        <a href="/auth/login">Sign In</a>
      </div>
    </div>
  </div>

  <script src="/js/register.js"></script>
</body>
</html>