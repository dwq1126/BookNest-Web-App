<link rel="stylesheet" href="/css/home.css">

<div class="hero-section">
    <h1 class="logo-title">
        <span class="book-icon">📚</span>BookNest
    </h1>
    <div class="decorative-line"></div>
    <p class="subtitle">✨ Discover Your Next Great Read ✨</p>
</div>

<form id="searchForm" action="/search" method="GET">
    <input type="text" id="searchInput" name="q" placeholder="🔍 Search books, authors, or categories..." required minlength="2">
    <button type="submit">Search</button>
</form>

{{#if popular}}
<h2>🔥 Popular Books</h2>
<div class="book-list">
    {{#each popular}}
   <div class="book-card">
        <img src="{{this.coverUrl}}" alt="{{this.title}}" 
             onerror="this.style.background='linear-gradient(135deg, #667eea 0%, #764ba2 100%)'; this.style.height='300px'">
        <div class="book-card-content">
            <h3>{{this.title}}</h3>
            <p style="color: #764ba2; font-weight: 600;">{{this.author}}</p>
            <p>⭐ {{this.rating}}</p>
            <p><span style="background: #e0e7ff; color: #4338ca; padding: 0.25rem 0.5rem; border-radius: 4px; font-size: 0.85rem;">{{this.genres}}</span></p>
            <a href="/book/{{this._id}}?q={{keyword}}">View Details →</a>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}

{{#if newest}}
<h2>🆕 New Releases</h2>
<div class="book-list">
    {{#each newest}}
    <div class="book-card">
