<div id="rankingModal" style="display: none; position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); z-index: 1000; align-items: center; justify-content: center;">
  <div style="background: white; padding: 2rem; border-radius: 12px; max-width: 500px; margin: 2rem;">
    <h2 style="margin-top: 0;">üèÜ Top Rated Books</h2>
    <div id="rankingContent"></div>
    <button onclick="closeRankings()" style="margin-top: 1rem;">Close</button>
  </div>
</div>

<script>
function showRankings() {
  fetch('/books/api/ranking')
    .then(res => res.json())
    .then(data => {
      const content = data.map((book, index) => 
        `<div style="padding: 1rem; margin: 0.5rem 0; background: #f3f4f6; border-radius: 8px;">
          <strong>#${index + 1}</strong> ${book.title} - ${book.author} 
          <span style="color: #f59e0b;">‚≠ê ${book.avgRating}</span>
        </div>`
      ).join('');
      document.getElementById('rankingContent').innerHTML = content;
      document.getElementById('rankingModal').style.display = 'flex';
    });
}

function closeRankings() {
  document.getElementById('rankingModal').style.display = 'none';
}
</script>