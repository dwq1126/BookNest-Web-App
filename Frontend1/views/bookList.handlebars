cat > views/bookList.handlebars << 'EOF'
<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        min-height: 100vh;
        margin: 0;
        padding: 2rem;
    }
    
    h1 {
        color: white;
        text-align: center;
        font-size: 3rem;
        margin-bottom: 1rem;
    }
    
    .search-info {
        text-align: center;
        color: white;
        font-size: 1.2rem;
        margin-bottom: 2rem;
    }
    
    .book-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .book-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        transition: all 0.3s;
    }
    
    .book-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.25);
    }
    
    .book-card img {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }
    
    .book-card-content {
        padding: 1.5rem;
    }
    
    .book-card h3 {
        color: #1f2937;
        margin-bottom: 0.5rem;
    }
    
    .book-card a {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.75rem 1.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
    }
    
    .back-link {
        display: inline-block;
        margin: 2rem auto;
        padding: 1rem 2rem;
        background: white;
        color: #667eea;
        text-decoration: none;
        border-radius: 10px;
        font-weight: bold;
        text-align: center;
    }
    
    .no-results {
        text-align: center;
        padding: 3rem;
        background: white;
        border-radius: 15px;
        max-width: 500px;
        margin: 2rem auto;
    }
</style>

<h1>üìñ Search Results</h1>

{{#if keyword}}
<p class="search-info">
    Found <strong>{{resultCount}}</strong> results for "<strong>{{keyword}}</strong>"
</p>
{{/if}}

<div style="text-align: center;">
    <a href="/" class="back-link">‚Üê Back to Home</a>
</div>

{{#if books.length}}
<div class="book-list">
    {{#each books}}
    <div class="book-card">
        <img src="{{this.coverUrl}}" alt="{{this.title}}" 
             onerror="this.style.background='linear-gradient(135deg, #667eea 0%, #764ba2 100%)'; this.style.height='300px'">
        <div class="book-card-content">
            <h3>{{this.title}}</h3>
            <p style="color: #764ba2; font-weight: 600;">{{this.author}}</p>
            <p>‚≠ê {{this.rating}}</p>
            <p><span style="background: #e0e7ff; color: #4338ca; padding: 0.25rem 0.5rem; border-radius: 4px; font-size: 0.85rem;">{{this.category}}</span></p>
            <p style="color: #10b981; font-weight: bold; font-size: 1.2rem;">${{this.price}}</p>
            <a href="/books/details?id={{this._id}}">View Details ‚Üí</a>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<div class="no-results">
    <h3>üòî No books found</h3>
    <p>Try searching with different keywords</p>
</div>
{{/if}}
EOF